<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/cric"
        app:layout_constraintBottom_toTopOf="@id/home_banner_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/scheduleBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff5f6d"
                    android:elevation="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="SCHEDULE CRICKET"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/toPointsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4facfe"
                    android:elevation="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="POINTS TABLE"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/quizShowHide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:visibility="gone"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/quizBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fcd12a"
                    android:elevation="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Cricket quiz"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/statsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FB861A"
                    android:elevation="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="TOP PLAYERS"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/squadsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00f2fe"
                    android:elevation="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="SQUADS"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/querkaBtn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/quiz_pic"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="25sp"
                    tools:ignore="SpeakableTextPresentCheck" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/checkUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="20dp"
                android:background="#00000000"
                android:elevation="10dp"
                android:gravity="center"
                android:text="Check App Updates"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/home_banner_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#dfdfdf"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>